<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.second_generation_house.Fragments.SocketFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/btnPowerSocket"
        style="@drawable/style_power_socket_on"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_marginBottom="184dp"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/style_power_socket_on"
        android:foregroundGravity="center"
        android:padding="50sp"
        android:src="@drawable/ic_icon_new_power_socket_state_on"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewInfoSocket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/century_gothic_std_regular"
        android:text="The power socket is active"
        android:textSize="17sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPowerSocket" />
</android.support.constraint.ConstraintLayout>
