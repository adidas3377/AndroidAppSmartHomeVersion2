<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <!-- Стиль для Кнопки регистрации -->
    <style name="Style_Login_RegisterButton">
        <item name="android:background">@drawable/style_round_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Стиль для Кнопки для подключения к Google+ -->
    <style name="Style_Login_GoogleButton">
        <item name="android:background">@drawable/style_round_button</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <!-- Стиль для Кнопки Login -->
    <style name="Style_Login_LoginButton">
        <item name="android:background">@drawable/style_round_button</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/login</item>
    </style>
    <!-- Стиль для EditText -->
    <style name="Style_EditText">
        <item name="android:colorControlActivated">@color/white</item>
        <item name="android:colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Стиль для значений Hum и Temp -->
    <style name="Style_TextView_Values">
        <item name="android:background">@drawable/style_background_values</item>
        <item name="android:textColor">@color/main_black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5sp</item>
    </style>


</resources>
